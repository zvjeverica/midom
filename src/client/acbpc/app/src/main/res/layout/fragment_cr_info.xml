<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hr.fer.zari.midom.fragments.CrInfoFragment">

    <TextView
        android:id="@+id/crInfo_name"
        android:textSize="@dimen/cr_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/crInfo_owner"
        android:textSize="@dimen/cr_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/crInfo_createDate"
        android:textSize="@dimen/cr_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/crInfo_message"
        android:textSize="@dimen/cr_info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="36sp"
        />


    <LinearLayout
        android:paddingTop="36sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="@dimen/two_button_margin"
            android:layout_marginLeft="@dimen/two_button_margin"
            android:layout_weight="1"
            android:id="@+id/crInfo_reject_button"
            android:text="@string/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginRight="@dimen/two_button_margin"
            android:layout_marginLeft="@dimen/two_button_margin"
            android:layout_weight="1"
            android:id="@+id/crInfo_accept_button"
            android:text="@string/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
